model_path=$HOME/data/gazebo_models

if [ -z $GAZEBO_MODEL_PATH ]
then
    export GAZEBO_MODEL_PATH=$model_path
else
    export GAZEBO_MODEL_PATH=$GAZEBO_MODEL_PATH:$model_path
fi
if [ -z $GAZEBO_RESOURCE_PATH ]
then
    export GAZEBO_RESOURCE_PATH=$model_path
else
    export GAZEBO_RESOURCE_PATH=$GAZEBO_RESOURCE_PATH:$model_path
fi
